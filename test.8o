: main
  :alias  alias v8
  :unpack bar v7
  i := bighex v2

  load v1
  loop
    if v1 == 15 then jump v4
    v1 += 1
    while v3 key
      :breakpoint
      delay  += 1
      buzzer := v1
  again
  save v1

  sprite v1 v2 1
  clear
;

: label
: immediately-following-label
  jump0
  bcd
  return

: else-it-all
  if v1 == 0 begin
    v2 += v3
  else
    v1 += v3
  end

: next-label :next
  

